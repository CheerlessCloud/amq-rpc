{
  "name": "amq-rpc",
  "version": "0.0.0-development",
  "description": "Adbstraction over MQ for RPC service",
  "main": "dist/index.js",
  "repository": "git@github.com:CheerlessCloud/amq-rpc.git",
  "author": "CheerlessCloud <nnsceg@gmail.com>",
  "license": "MIT",
  "keywords": [
    "mq",
    "rpc",
    "amq-rpc",
    "rabbitmq",
    "rpc-over-mq"
  ],
  "scripts": {
    "test": "ava",
    "test:dev": "ava --watch",
    "test:debug": "node --inspect --inspect-brk --require babel-register node_modules/ava/profile.js ",
    "test:cover": "nyc ava",
    "posttest:cover": "nyc report --reporter=lcov",
    "report-coverage": "catw coverage/lcov.info | coveralls",
    "flow:check": "flow check",
    "lint": "eslint --ext .js ./src ./test",
    "lint:fix": "eslint --ext .js --fix ./src ./test",
    "prebuild": "rimraf ./dist",
    "build": "babel src -d ./dist -s --ignore test.js",
    "postbuild": "flow-copy-source -v -i *.test.js src dist",
    "semantic-release": "semantic-release",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "amqplib": "^0.5.2",
    "eerror": "^2.0.0",
    "lodash.merge": "^4.6.1",
    "p-event": "^2.1.0",
    "p-timeout": "^2.0.1",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^9.0.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "catw": "^1.0.1",
    "coveralls": "^3.0.2",
    "eslint": "^5.6.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-plugin-flowtype": "^2.50.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-prettier": "^2.6.2",
    "flow-bin": "^0.81.0",
    "flow-copy-source": "^2.0.2",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.0",
    "nyc": "^13.0.1",
    "prettier": "1.14.3",
    "rimraf": "^2.6.2",
    "semantic-release": "^15.8.1",
    "travis-deploy-once": "^5.0.1"
  },
  "engines": {
    "node": ">=8.4.0"
  },
  "babel": {
    "retainLines": true,
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "8.4"
          },
          "useBuiltIns": "usage",
          "shippedProposals": true,
          "loose": true
        }
      ]
    ],
    "plugins": [
      "syntax-object-rest-spread",
      [
        "transform-class-properties",
        {
          "spec": true
        }
      ],
      "transform-flow-strip-types"
    ]
  },
  "ava": {
    "files": [
      "src/**/*.test.js",
      "test/**/*.js"
    ],
    "source": [
      "src/*"
    ],
    "verbose": true,
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  },
  "release": {
    "analyzeCommits": {
      "preset": "angular",
      "releaseRules": [
        {
          "type": "feat",
          "release": "minor"
        },
        {
          "type": "fix",
          "release": "patch"
        },
        {
          "type": "docs",
          "scope": "/readme/",
          "release": "patch"
        },
        {
          "type": "perf",
          "release": "patch"
        },
        {
          "type": "build",
          "release": "patch"
        }
      ],
      "parserOpts": {
        "noteKeywords": [
          "BREAKING CHANGE",
          "BREAKING CHANGES",
          "BREAKING"
        ]
      }
    }
  },
  "lint-staged": {
    "*.{js,md}": [
      "eslint --ext .js"
    ]
  },
  "files": [
    "dist/**/*.*",
    "!dist/**/*.test.*"
  ]
}
